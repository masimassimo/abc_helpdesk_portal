<odoo>
  <data>
      <template id="portal_my_home_menu_helpdesk_ext" inherit_id="helpdesk.tickets_followup" priority="50">
        <xpath expr="//div[@name='description']" position="after">
            <div class="row mb-4" name="cosa_accade">
                <strong class="col-lg-2">Cosa accade</strong>
                    <div t-if="ticket.x_studio_stato_attuale" class="col-lg-10" t-field="ticket.x_studio_stato_attuale"/>
                    <div t-else="" class="col-lg-10">
                        <em class="text-muted"><small>Nessuna descrizione</small></em>
                    </div>
            </div>
            <div class="row mb-4" name="cosa_dovrebbe_accadere">
                <strong class="col-lg-2">Cosa dovrebbe accadere</strong>
                    <div t-if="ticket.x_studio_richiesta" class="col-lg-10" t-field="ticket.x_studio_richiesta"/>
                    <div t-else="" class="col-lg-10">
                        <em class="text-muted"><small>Nessuna descrizione</small></em>
                    </div>
            </div>
        </xpath>
      </template>
